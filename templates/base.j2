<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}" />
    <link rel="stylesheet" href="{{ url_for('static', filename='css/jquery.timepicker.css') }}" />
    <title>Pi Feeder</title>
    {% endblock %}
</head>
<body>
    <ul id="dropdown1" class="dropdown-content">
        <li><a href="/settings">Settings</a></li>
        <li class="divider"></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
    <nav>
        <div class="nav-wrapper blue">
            <a href="/" class="brand-logo">Pi Feeder</a>
            {% if show_menu %}
            <ul class="right hide-on-med-and-down">
                {% if show_refresh %}
                <li><a id="refresh"><i class="material-icons">refresh</i></a></li>
                {% endif %}
                <li><a class="dropdown-button" href="#!" data-activates="dropdown1">More<i class="material-icons right">arrow_drop_down</i></a></li>
            </ul>
            {% endif %}
        </div>
    </nav>

    <div id="content">{% block content %}{% endblock %}</div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script src="http://momentjs.com/downloads/moment.min.js"></script>
    <script src="{{ url_for('static', filename='js/jquery.timepicker.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/networking.js') }}"></script>

    {% block scripts %}{% endblock %}
</body>
</html>